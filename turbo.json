{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"],
			"cache": true
		},
		"build:storybook": {
			"dependsOn": ["^build"],
			"outputs": ["storybook-static/**"]
		},
		"dev": {
			"dependsOn": ["@4bits/formbuilder#build"],
			"outputs": [],
			"cache": false,
			"persistent": true
		},
		"tsc": {
			"cache": false
		},
		"lint": {
			"cache": false
		},
		"lint:fix": {
			"cache": false
		},
		"format": {
			"cache": false
		}
	}
}
